# AI Services Configuration
OLLAMA_BASE_URL=http://ollama:11434
WHISPER_BASE_URL=http://whisper:8000

# Ollama Performance Tuning (Target: 40GB RAM / 12 vCPU)
OLLAMA_NUM_PARALLEL=2
OLLAMA_MAX_LOADED_MODELS=2
OLLAMA_KEEP_ALIVE=24h
OLLAMA_NUM_THREADS=10

# Ollama Models
OLLAMA_PRIMARY_MODEL=qwen2.5:14b-instruct-q4_K_M
OLLAMA_SECONDARY_MODEL=llama3.1:8b-instruct-q4_K_M

# Espacenet OPS API (register at https://developers.epo.org/)
OPS_CONSUMER_KEY=
OPS_CONSUMER_SECRET=

# INPI Configuration
# Mode: 'scrape' (Busca Web) or 'rpi_xml' (RPI dados abertos)
INPI_MODE=scrape

# Backend Configuration
PORT=3000
NODE_ENV=production

# Database (auto-generated from docker-compose defaults)
# Override these in your .env if using custom credentials
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=patent_compass
DATABASE_URL=postgresql://user:password@db:5432/patent_compass

# Frontend URL (used in docker-compose VITE_API_URL)
VITE_API_URL=http://localhost:3000
